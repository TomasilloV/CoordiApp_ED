<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/dark_blue">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/swiperefresh"
        android:layout_height="match_parent"
        android:background="@color/dark_blue">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_blue">

                <TextView
                    android:id="@+id/textPaso"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:text="@string/paso_4"
                    android:textColor="@color/white"
                    android:maxLength="20"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.9"/>

                <TextView
                    android:id="@+id/textDistrito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/distrito"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/textPaso"
                    app:layout_constraintStart_toStartOf="@id/textInstalación"/>

                <EditText
                    android:id="@+id/editDistrito"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:imeOptions="actionDone"
                    android:background="@drawable/texts_and_spinners"
                    android:inputType="text"
                    android:hint="Ingresa el distrito"
                    android:maxLength="9"
                    android:padding="8dp"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/spinnerInstalacion"
                    app:layout_constraintStart_toStartOf="@+id/spinnerInstalacion"
                    app:layout_constraintTop_toBottomOf="@id/textDistrito" />

                <TextView
                    android:id="@+id/textTecnologia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tecnologia"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/editDistrito"
                    app:layout_constraintStart_toStartOf="@id/textDistrito" />

                <Spinner
                    android:id="@+id/spinnerTecnologia"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/texts_and_spinners"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/spinnerInstalacion"
                    app:layout_constraintStart_toStartOf="@+id/spinnerInstalacion"
                    app:layout_constraintTop_toBottomOf="@id/textTecnologia" />

                <TextView
                    android:id="@+id/textMetraje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:text="@string/metraje"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/editMetraje"
                    app:layout_constraintTop_toBottomOf="@id/spinnerTecnologia" />

                <EditText
                    android:id="@+id/editMetraje"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/texts_and_spinners"
                    android:hint="Ingresa el metraje"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="3"
                    android:padding="8dp"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textMetraje"
                    app:layout_constraintWidth_percent="0.85" />

                <TextView
                    android:id="@+id/textInstalación"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de instalación"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/editMetraje"
                    app:layout_constraintStart_toStartOf="@id/spinnerInstalacion"/>

                <Spinner
                    android:id="@+id/spinnerInstalacion"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/texts_and_spinners"
                    android:textSize="18sp"
                    app:layout_constraintTop_toBottomOf="@id/textInstalación"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.85" />

                <TextView
                    android:id="@+id/textFachada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fachada de casa"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/spinnerInstalacion"
                    app:layout_constraintStart_toStartOf="@id/spinnerInstalacion"/>

                <Button
                    android:id="@+id/btnFachada"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/dark_gray"
                    android:visibility="gone"
                    android:text="@string/subir_foto"
                    app:layout_constraintEnd_toEndOf="@+id/spinnerInstalacion"
                    app:layout_constraintStart_toStartOf="@+id/spinnerInstalacion"
                    app:layout_constraintTop_toBottomOf="@id/textFachada" />

                <TextView
                    android:id="@+id/textFotoOS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fotografía OS"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/btnFachada"
                    app:layout_constraintStart_toStartOf="@id/spinnerInstalacion"/>

                <Button
                    android:id="@+id/btnFotoOs"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/btn_fotos"
                    android:text="@string/subir_foto"
                    app:layout_constraintEnd_toEndOf="@+id/spinnerInstalacion"
                    app:layout_constraintStart_toStartOf="@+id/spinnerInstalacion"
                    app:layout_constraintTop_toBottomOf="@id/textFotoOS" />

                <Button
                    android:id="@+id/next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/siguiente"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_options"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/btnFotoOs"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/btnrecargar"
                    app:layout_constraintWidth_percent="0.5"/>

                <Button
                    android:id="@+id/btnrecargar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_options"
                    android:text="Recargar"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.502"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/next"
                    app:layout_constraintWidth_percent="0.5" />

                <Button
                    android:id="@+id/btnRegresar"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_options"
                    android:text="Regresar"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.15"
                    app:layout_constraintWidth_percent="0.2" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>
