<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_blue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            android:padding="16dp">

            <TextView
                android:id="@+id/textPaso"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="@string/paso_4"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBaseline_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.2"/>

            <TextView
                android:id="@+id/textTitular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre titular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/textPaso"
                app:layout_constraintStart_toStartOf="@id/editTitular"/>

            <EditText
                android:id="@+id/editTitular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:background="@color/light_gray"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/textTitular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

            <TextView
                android:id="@+id/textPaterno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido paterno Titular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/editTitular"
                app:layout_constraintStart_toStartOf="@id/editTitular"/>

            <EditText
                android:id="@+id/editApPaterno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:background="@color/light_gray"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/textPaterno"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

            <TextView
                android:id="@+id/textMaterno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido materno Titular"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/editApPaterno"
                app:layout_constraintStart_toStartOf="@id/editTitular"/>

            <EditText
                android:id="@+id/editMaterno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:background="@color/light_gray"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/textMaterno"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

            <TextView
                android:id="@+id/textRecibe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Persona que recibe"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/editMaterno"
                app:layout_constraintStart_toStartOf="@id/editTitular"/>

            <EditText
                android:id="@+id/editRecibe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:background="@color/light_gray"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/textRecibe"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

            <TextView
                android:id="@+id/textContactoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TelÃ©fono cliente"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/editRecibe"
                app:layout_constraintStart_toStartOf="@id/editTitular"/>

            <EditText
                android:id="@+id/editCliente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:background="@color/light_gray"
                android:inputType="phone"
                android:maxLength="10"
                app:layout_constraintTop_toBottomOf="@id/textContactoCliente"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

            <TextView
                android:id="@+id/textPuerto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto puerto"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/editCliente"
                app:layout_constraintStart_toStartOf="@id/editTitular"/>

            <Button
                android:id="@+id/btnFotoPuerto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:text="Subir Foto Puerto"
                android:background="@color/dark_gray"
                app:layout_constraintTop_toBottomOf="@id/textPuerto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/siguiente"
                android:textColor="@color/white"
                android:background="@color/green"
                android:padding="12dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintTop_toBottomOf="@+id/btnFotoPuerto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>
