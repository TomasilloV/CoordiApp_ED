<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue">

            <TextView
                android:id="@+id/textPaso"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:text="@string/paso_3"
                android:textColor="@color/white"
                android:maxLength="10"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

            <TextView
                android:id="@+id/textTipoTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tipo_tarea"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/textPaso"
                app:layout_constraintStart_toStartOf="@id/editTarea"/>

            <EditText
                android:id="@+id/editTarea"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="@color/light_gray"
                android:padding="8dp"
                android:imeOptions="actionDone"
                android:textSize="18sp"
                android:hint="Ingresa el tipo de tarea"
                android:maxLength="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textTipoTarea"
                app:layout_constraintWidth_percent="0.85" />

            <TextView
                android:id="@+id/textInstalación"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de instalación"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/editTarea"
                app:layout_constraintStart_toStartOf="@id/editTarea"/>

            <Spinner
                android:id="@+id/spinnerInstalacion"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="@color/light_gray"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/editTarea"
                app:layout_constraintStart_toStartOf="@+id/editTarea"
                app:layout_constraintTop_toBottomOf="@id/textInstalación" />

            <TextView
                android:id="@+id/textFachada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fachada de casa"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/spinnerInstalacion"
                app:layout_constraintStart_toStartOf="@id/editTarea"/>

            <Button
                android:id="@+id/btnFachada"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="@color/dark_gray"
                android:text="Subir Fachada"
                app:layout_constraintEnd_toEndOf="@+id/editTarea"
                app:layout_constraintStart_toStartOf="@+id/editTarea"
                app:layout_constraintTop_toBottomOf="@id/textFachada" />

            <TextView
                android:id="@+id/textFotoOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fotografía OS"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/btnFachada"
                app:layout_constraintStart_toStartOf="@id/editTarea"/>

            <Button
                android:id="@+id/btnFotoOs"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="@color/dark_gray"
                android:text="Subir Foto OS"
                app:layout_constraintEnd_toEndOf="@+id/editTarea"
                app:layout_constraintStart_toStartOf="@+id/editTarea"
                app:layout_constraintTop_toBottomOf="@id/textFotoOS" />

            <Button
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/siguiente"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintTop_toBottomOf="@+id/btnFotoOs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
