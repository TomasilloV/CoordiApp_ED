<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrar.RegistrandoFragment2_1"
    android:background="@color/dark_blue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue">

            <TextView
                android:id="@+id/textPaso"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:text="@string/paso_2_1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>



            <TextView
                android:id="@+id/textFotoOnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fotografía ONT cobre"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintStart_toStartOf="@id/btnFotoOnt"
                app:layout_constraintTop_toBottomOf="@+id/textPaso" />

            <Button
                android:id="@+id/btnFotoOnt"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:text="@string/subir_foto"
                android:background="@color/dark_gray"
                app:layout_constraintTop_toBottomOf="@id/textFotoOnt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.85"/>

            <TextView
                android:id="@+id/textFotoHoja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fotografía hoja de retorno"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintStart_toStartOf="@id/btnFotoOnt"
                app:layout_constraintTop_toBottomOf="@+id/btnFotoOnt" />

            <Button
                android:id="@+id/btnFotoHoja"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:text="@string/subir_foto"
                android:background="@color/dark_gray"
                app:layout_constraintTop_toBottomOf="@id/textFotoHoja"
                app:layout_constraintStart_toStartOf="@id/btnFotoOnt"
                app:layout_constraintEnd_toEndOf="@+id/btnFotoOnt"/>

            <TextView
                android:id="@+id/textFotoSerie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fotografía #serie ONT cobre"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintStart_toStartOf="@id/btnFotoOnt"
                app:layout_constraintTop_toBottomOf="@id/btnFotoHoja" />

            <Button
                android:id="@+id/btnFotoSerie"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:text="@string/subir_foto"
                android:background="@color/dark_gray"
                app:layout_constraintTop_toBottomOf="@id/textFotoSerie"
                app:layout_constraintStart_toStartOf="@id/btnFotoOnt"
                app:layout_constraintEnd_toEndOf="@id/btnFotoOnt"/>

            <Button
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/siguiente"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintTop_toBottomOf="@+id/btnFotoSerie"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.5"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#CB000000">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>

</FrameLayout>