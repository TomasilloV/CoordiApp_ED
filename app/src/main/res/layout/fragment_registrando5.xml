<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">

    <!-- Contenedor principal de contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/textPaso"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Paso 5"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBaseline_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.2"/>

            <TextView
                android:id="@+id/textEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/textPaso"
                app:layout_constraintStart_toStartOf="@id/spinnerEstado"/>

            <Spinner
                android:id="@+id/spinnerEstado"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:background="@color/light_gray"
                app:layout_constraintTop_toBottomOf="@id/textEstado"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

            <TextView
                android:id="@+id/textCiudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/spinnerEstado"
                app:layout_constraintStart_toStartOf="@id/spinnerEstado"/>

            <Spinner
                android:id="@+id/spinnerCiudad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:background="@color/light_gray"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/textCiudad"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

            <TextView
                android:id="@+id/textColonia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colonia"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/spinnerCiudad"
                app:layout_constraintStart_toStartOf="@id/spinnerEstado"/>

            <Spinner
                android:id="@+id/spinnerColonia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:background="@color/light_gray"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/textColonia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

            <TextView
                android:id="@+id/textCalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/spinnerColonia"
                app:layout_constraintStart_toStartOf="@id/spinnerEstado"/>

            <EditText
                android:id="@+id/editCalle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:background="@color/light_gray"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@id/textCalle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

            <TextView
                android:id="@+id/textNumeroExterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número exterior"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/editCalle"
                app:layout_constraintStart_toStartOf="@id/spinnerEstado"/>

            <EditText
                android:id="@+id/editNumeroExterior"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:background="@color/light_gray"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@id/textNumeroExterior"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

            <!-- Botón hasta abajo -->
            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/siguiente"
                android:textColor="@color/white"
                android:background="@color/green"
                android:padding="12dp"
                android:paddingTop="20dp"
                android:paddingBottom="30dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                app:layout_constraintTop_toBottomOf="@+id/editNumeroExterior"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#CB000000">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>

</FrameLayout>
