<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/dark_blue">

        <!-- Contenedor principal de contenido -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textPaso"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Paso 6"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBaseline_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.2"/>

                <TextView
                    android:id="@+id/textFolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/folio_pisa"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/textPaso"
                    app:layout_constraintStart_toStartOf="@id/spinnerOnt"/>

                <EditText
                    android:id="@+id/editFolio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:enabled="false"
                    android:textSize="18sp"
                    android:background="@color/light_gray"
                    android:inputType="text"
                    app:layout_constraintTop_toBottomOf="@id/textFolio"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.9"/>

                <TextView
                    android:id="@+id/textOnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SELECCIONA ONT"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/editFolio"
                    app:layout_constraintStart_toStartOf="@id/spinnerOnt"/>

                <Spinner
                    android:id="@+id/spinnerOnt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:padding="8dp"
                    android:background="@color/light_gray"
                    app:layout_constraintTop_toBottomOf="@id/textOnt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintWidth_percent="0.9"/>

                <Button
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/siguiente"
                    android:textColor="@color/white"
                    android:background="@color/green"
                    android:padding="12dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="30dp"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/spinnerOnt"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/loadingOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#CB000000">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </FrameLayout>

    </FrameLayout>
