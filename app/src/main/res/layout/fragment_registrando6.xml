<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swiperefresh"
    android:background="@color/dark_blue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textPaso"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:text="@string/paso_6"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.9"/>

            <TextView
                android:id="@+id/textEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/textPaso"
                app:layout_constraintStart_toStartOf="@id/spinnerEstado"/>

            <Spinner
                android:id="@+id/spinnerEstado"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="@color/light_gray"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textEstado"
                app:layout_constraintWidth_percent="0.85" />

            <TextView
                android:id="@+id/textCiudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/spinnerEstado"
                app:layout_constraintStart_toStartOf="@id/spinnerEstado"/>

            <Spinner
                android:id="@+id/spinnerCiudad"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="@color/light_gray"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/spinnerEstado"
                app:layout_constraintStart_toStartOf="@+id/spinnerEstado"
                app:layout_constraintTop_toBottomOf="@id/textCiudad" />


            <TextView
                android:id="@+id/textColonia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colonia"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/spinnerCiudad"
                app:layout_constraintStart_toStartOf="@id/spinnerEstado"/>

            <Spinner
                android:id="@+id/spinnerColonia"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="@color/light_gray"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/spinnerEstado"
                app:layout_constraintStart_toStartOf="@+id/spinnerEstado"
                app:layout_constraintTop_toBottomOf="@id/textColonia" />

            <TextView
                android:id="@+id/textCalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/spinnerColonia"
                app:layout_constraintStart_toStartOf="@id/spinnerEstado"/>

            <EditText
                android:id="@+id/editCalle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="@color/light_gray"
                android:padding="8dp"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textSize="18sp"
                android:hint="Ingresa la calle"
                app:layout_constraintEnd_toEndOf="@id/spinnerEstado"
                app:layout_constraintStart_toStartOf="@id/spinnerEstado"
                app:layout_constraintTop_toBottomOf="@id/textCalle"/>

            <TextView
                android:id="@+id/textNumeroExterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número exterior"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/editCalle"
                app:layout_constraintStart_toStartOf="@id/spinnerEstado"/>

            <EditText
                android:id="@+id/editNumeroExterior"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="@color/light_gray"
                android:padding="8dp"
                android:textSize="18sp"
                android:hint="Ingresa el número del lugar"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="@id/spinnerEstado"
                app:layout_constraintStart_toStartOf="@id/spinnerEstado"
                app:layout_constraintTop_toBottomOf="@id/textNumeroExterior"/>

            <Button
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/siguiente"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="1dp"
                app:layout_constraintTop_toBottomOf="@+id/editNumeroExterior"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/btnrecargar"
                app:layout_constraintWidth_percent="0.5"/>

            <Button
                android:id="@+id/btnrecargar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Recargar"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/next"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.5"/>

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_super_fancy_bg"
                android:backgroundTint="@color/green"
                android:text="Regresar"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.19"
                app:layout_constraintWidth_percent="0.2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CB000000"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</FrameLayout>
